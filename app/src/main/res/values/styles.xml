<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="roll_anim_style" parent="android:Animation.Translucent">
        <!-- 进入时的动画 -->
        <item name="@android:windowEnterAnimation">@anim/roll_up</item>
        <!-- 退出时的动画 -->
        <item name="@android:windowExitAnimation">@anim/roll_down</item>
    </style>
    <!-- Style for custom dialog theme -->
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogAnimation</item>-->

    </style>

    <style name="pop_up_2_down_anim">
        <item name="android:windowEnterAnimation">@anim/anim_scale_up</item>
        <item name="android:windowExitAnimation">@anim/anim_scale_down</item>
    </style>


    <style name="Default_Text_Size_Middle">
        <item name="text_20sp">@dimen/text_20sp</item>
        <item name="text_18sp">@dimen/text_18sp</item>
        <item name="text_16sp">@dimen/text_16sp</item>
        <item name="text_12sp">@dimen/text_12sp</item>
        <item name="text_10sp">@dimen/text_10sp</item>
    </style>

    <style name="Text_Size_Small">
        <item name="text_20sp">@dimen/text_20sp_small</item>
        <item name="text_18sp">@dimen/text_18sp_small</item>
        <item name="text_16sp">@dimen/text_16sp_small</item>
        <item name="text_12sp">@dimen/text_12sp_small</item>
        <item name="text_10sp">@dimen/text_10sp_small</item>
    </style>

    <style name="Text_Size_Big">
        <item name="text_20sp">@dimen/text_20sp_big</item>
        <item name="text_18sp">@dimen/text_18sp_big</item>
        <item name="text_16sp">@dimen/text_16sp_big</item>
        <item name="text_12sp">@dimen/text_12sp_big</item>
        <item name="text_10sp">@dimen/text_10sp_big</item>
    </style>

    <!-- Style for custom dialog theme -->
    <style name="customDialog_roll_up_down" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <!--<item name="android:windowAnimationStyle">@style/roll_anim_style</item>-->
    </style>
</resources>
