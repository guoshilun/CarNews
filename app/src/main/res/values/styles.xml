<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="roll_anim_style" parent="android:Animation.Translucent">
        <!-- 进入时的动画 -->
        <item name="@android:windowEnterAnimation">@anim/roll_up</item>
        <!-- 退出时的动画 -->
        <item name="@android:windowExitAnimation">@anim/roll_down</item>
    </style>
    <!-- Style for custom dialog theme -->
    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogAnimation</item>-->

    </style>

    <style name="pop_up_2_down_anim">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>
</resources>
