<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <com.ogaclejapan.smarttablelayout.SmartTabLayout
        android:id="@+id/pager_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none"
        app:stl_defaultTabBackground="@color/colorWhite"
        app:stl_defaultTabTextColor="@color/title_text_selector"
        app:stl_distributeEvenly="true"
        app:stl_dividerColor="@color/colorTransparent"
        app:stl_dividerThickness="0dp"
        app:stl_clickable="true"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="@color/app_title_selected"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInFront="true"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorOftenInCenter="false"
        app:stl_indicatorThickness="3dp"
        app:stl_indicatorWithLeftMiddleRight="false"
        app:stl_indicatorWithLeftMiddleRightMarginRight="5dp"
        app:stl_indicatorWithoutPadding="true"
        app:stl_overlineColor="@color/colorTransparent"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="@color/divider"
        app:stl_underlineThickness="2px"

        />


    <android.support.v4.view.ViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>