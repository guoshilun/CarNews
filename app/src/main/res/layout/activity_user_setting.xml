<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include
        layout="@layout/layout_title_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <com.jmgzs.lib.view.roundedimage.RoundedImageView
            android:id="@+id/user_head"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_head_default"
            app:riv_border_color="@color/colorWhite"
            app:riv_border_width="2dp"
            app:riv_oval="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jmgzs.carnews.ui.view.SettingItemView
            android:id="@+id/setting_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2px" />

        <com.jmgzs.carnews.ui.view.SettingItemView
            android:id="@+id/setting_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2px" />

        <com.jmgzs.carnews.ui.view.SettingItemView
            android:id="@+id/setting_textsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_5dp" />

        <com.jmgzs.carnews.ui.view.SettingItemView
            android:id="@+id/setting_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_5dp" />

        <com.jmgzs.carnews.ui.view.SettingItemView
            android:id="@+id/setting_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2px" />

        <com.jmgzs.carnews.ui.view.SettingItemView
            android:id="@+id/setting_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_5dp" />

        <com.jmgzs.carnews.ui.view.SettingItemView
            android:id="@+id/setting_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px" />


    </LinearLayout>

</LinearLayout>