<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    android:background="@color/app_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/welcome_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/app_default_middle"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/padding_20dp"
        android:background="@drawable/bg_adv"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="广告5s"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_12sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/app_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">


        <com.jmgzs.lib.view.roundedimage.RoundedImageView
            android:id="@+id/welcome_bottom_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@mipmap/logo"
            app:riv_border_color="@color/colorTransparent"
            app:riv_border_width="0dp"
            app:riv_corner_radius="@dimen/top_tab_padding"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/welcome_bottom_logo_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_8dp"
            android:text="@string/splash_text"
            android:textSize="@dimen/text_16sp_small" />

    </LinearLayout>
</RelativeLayout>